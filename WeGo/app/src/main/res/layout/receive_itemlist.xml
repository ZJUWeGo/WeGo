<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:theme="@style/MyItemListTheme"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/itemName"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:text="神奇眼镜盒商品"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/itemID"
        android:layout_width="109dp"
        android:layout_height="23dp"
        android:text="G10001"
        android:textColor="#616161"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/itemlist_card"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.611"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        app:layout_constraintHorizontal_bias="0.392" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginRight="8dp"
        android:text="￥"
        android:textColor="#616161"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/itemlist_card"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.644"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        app:layout_constraintHorizontal_bias="0.45" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="55dp"
        android:layout_height="22dp"
        android:layout_marginRight="115dp"
        android:text="155.55"
        android:textColor="#616161"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintVertical_bias="0.644" />

    <TextView
        android:id="@+id/itemNum"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="15"
        android:textAlignment="viewEnd"
        android:textColor="@color/mycolorPrimary"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="@+id/itemlist_card"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="14dp"
        android:layout_height="17dp"
        android:text="件"
        android:textColor="@color/mycolorPrimary"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/itemlist_card"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        app:layout_constraintHorizontal_bias="0.987"
        app:layout_constraintVertical_bias="0.26999998" />

    <ImageView
        android:id="@+id/itemlist_card"
        android:layout_width="352dp"
        android:layout_height="106dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/itemlist_card" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="57dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/itemlist_default_item"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/itemlist_card"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/itemlist_card"
        app:layout_constraintTop_toTopOf="@+id/itemlist_card"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemlist_card"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.42000002" />

</android.support.constraint.ConstraintLayout>
