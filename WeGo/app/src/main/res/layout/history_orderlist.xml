<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/orderlist_back"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/orderlist_back"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/orderlist_top_left"
        android:layout_width="5dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/orderlist_back"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        app:srcCompat="@drawable/orderlist_top"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/orderlist_top_right"
        android:layout_width="32dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/orderlist_top"
        app:layout_constraintLeft_toLeftOf="@+id/orderlist_top_left"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/orderlist_back"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/orderStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="未支付"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="@+id/orderlist_top_left"
        app:layout_constraintRight_toRightOf="@+id/orderlist_top_right"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        app:layout_constraintVertical_bias="0.100000024"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/orderDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="2017-07-09 14:50:50"
        android:textColor="@color/cardList_addBorderColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintLeft_toLeftOf="@+id/orderlist_top_left"
        app:layout_constraintRight_toRightOf="@+id/orderlist_top_right"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        app:layout_constraintVertical_bias="0.92"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/orderPriceText"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="1525.5"
        android:textAlignment="viewEnd"
        android:textColor="@color/orderList_pay_true"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintLeft_toLeftOf="@+id/orderlist_top_left"
        app:layout_constraintRight_toRightOf="@+id/orderlist_top_right"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        app:layout_constraintVertical_bias="0.538"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/orderCNY"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:text="￥"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="@+id/orderlist_top_right"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/orderlist_top_left"
        app:layout_constraintTop_toTopOf="@+id/orderlist_back"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist_back"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.99"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>